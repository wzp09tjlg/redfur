<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_title_bar_contain"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f00"/>

    <FrameLayout
        android:id="@+id/fl_menu_contain"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/fl_title_bar_contain"
        android:background="#005899"
        />

    <FrameLayout
        android:id="@+id/fl_business_contain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fl_title_bar_contain"
        android:layout_toRightOf="@+id/fl_menu_contain"
        android:background="#990"
        />

</RelativeLayout>
